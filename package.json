{
  "devDependencies": {
    "tailwindcss": "^3.2.6"
  },
  "scripts": {
    "watch:main" : "npx tailwindcss -i ./src/main.css -o ./assets/css/main.css --watch",
    "watch:navigation" : "npx tailwindcss -i ./src/navigation.css -o ./assets/css/navigation.css --watch",
    "build:main" : "npx tailwindcss -i ./src/main.css -o ./assets/css/main.css",
    "build:navigation" : "npx tailwindcss -i ./src/navigation.css -o ./assets/css/navigation.css",
    "build:all" : "npx tailwindcss -i ./src/main.css -o ./assets/css/main.css & npx tailwindcss -i ./src/navigation.css -o ./assets/css/navigation.css"
  }
}